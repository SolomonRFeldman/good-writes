<%= @user.username %>
<ul>
  <% @user.groups.each do |group| %>
    <li><%= group.name %></li>
  <% end %>
</ul>

<ul>
  <% @user.pieces.each do |piece| %>
    <li><%= piece.title %></li>
    <%= button_to 'Edit', "/users/#{@user.id}/pieces/#{piece.id}/edit", method: :get %>
  <% end %>
</ul>

<%= button_to 'Add Piece', "/users/#{@user.id}/pieces/new", method: :get %>