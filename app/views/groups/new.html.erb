<%= form_with model: @group, class: "ml-3 mt-4"  do |f| %>
  <div class="form-row">
    <div class="form-row">
      <%= label_tag :name, 'Name', class: "col-form-label"%>
      <%= f.text_field :name, class: "col col-auto"  %>
    </div>

    <div class="form-row ml-2">
      <%= label_tag :form, 'Form', class: "col-form-label mr-1"%>
      <%= f.select :form, options_for_select([['Poetry'], ['Fiction'], ['Non-Fiction']]), class: "col col-auto" %>
    </div>

    <div class="form-row ml-2">
      <%= label_tag :alias, 'Alias', class: "col-form-label mr-1"%>
      <%= text_field :user_group, :alias %>
    </div>

    <div class="col col-auto ml-2">
      <%= f.submit "Create Group", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>