<%= form_with model: [@current_user, @piece], class: "ml-3 mt-4" do |f| %>
  <div class="form-row">
    <div class="form-row">
      <%= label_tag :title, 'Title', class: "col-form-label"%>
      <%= f.text_field :title, class: "col col-auto"  %>
    </div>
    <div class="form-row ml-2">
      <%= label_tag :Form, 'Form', class: "col-form-label mr-1"%>
      <%= f.select :form, options_for_select([['Poetry'], ['Fiction'], ['Non-Fiction']],[@piece.form]), class: "col col-auto" %>
    </div>
  </div>
      
  <div class="form-group mt-2">
    <%= label_tag :content, 'Content:', class: "col-form-label"%>
    <div class="col col-auto w-50">
      <%= f.text_area :content, class: "form-control", rows: "20" %>
    </div>
  </div>
  
  <div class="col col-auto">
    <%= f.submit "Update", class: "btn btn-primary" %>
  </div>
<% end %>