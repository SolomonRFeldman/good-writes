<%= form_with class: "form-row ml-3 mt-4", url: '/login', model: @user do |f| %>

  <%= label_tag :email, 'Email', class: "col-form-label"%>
  <div class="col col-auto">
    <%= f.email_field :email, class: 'form-control', placeholder: 'Email' %>
  </div>

  <%= label_tag :password, 'Password', class: "col-form-label"%>
  <div class="col col-auto">
    <%= f.password_field :password, class: 'form-control', placeholder: 'Password' %>
  </div>

  <div class="col col-auto">
    <%= f.submit "Log In", name: 'body_login', class: "btn btn-primary" %>
  </div>
  
<% end %>