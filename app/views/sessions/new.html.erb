<%= form_with local: true, class: "form-row ml-3 mt-4", url: '/login', model: User.new do |f| %>

  <%= label_tag :email, 'Email', class: "col-form-label"%>
  <div class="col col-auto">
    <%= f.email_field :email, class: 'form-control', placeholder: 'Email' %>
    <% if @error %>
      <small id="loginerror" class="form-text text-danger">Invalid Email or Password</small>
    <% end %>
  </div>

  <%= label_tag :password, 'Password', class: "col-form-label"%>
  <div class="col col-auto">
    <%= f.password_field :password, class: 'form-control', placeholder: 'Password' %>
  </div>

  <div class="col col-auto">
    <%= f.submit "Log In", name: 'body_login', class: "btn btn-primary" %>
  </div>
  
<% end %>