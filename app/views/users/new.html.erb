<%= form_with class: "form-row ml-3 mt-4", url: 'signup', model: @user do |f| %>

  <%= label_tag :username, 'Username', class: "col-form-label"%>
  <div class="col col-auto">
    <%= f.text_field :username, class: 'form-control', placeholder: 'Username' %>
  </div>

  <%= label_tag :email, 'Email', class: "col-form-label"%>
  <div class="col col-auto">
    <%= f.email_field :email, class: 'form-control', placeholder: 'Email' %>
  </div>

  <%= label_tag :password, 'Password', class: "col-form-label"%>
  <div class="col col-auto">
    <%= f.password_field :password, class: 'form-control', placeholder: 'Password' %>
  </div>

  <%= label_tag :password_confirmation, 'Confirm Password', class: "col-form-label"%>
  <div class="col col-auto">
    <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Confirm Password' %>
  </div>

  <div class="col col-auto">
    <%= f.submit "Sign Up", name: 'body_signup', class: "btn btn-primary" %>
  </div>
<% end %>
